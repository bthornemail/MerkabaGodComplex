{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": false,
    "emitDeclarationOnly": false,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "index.ts",
    "consciousness.ts", 
    "living-knowledge.ts",
    "libs/cue-core/types.ts",
    "libs/dpo-system/attention-token.ts",
    "libs/dpo-system/dpo-interface.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/__tests__/**",
    "apps/**/*",
    "tools/**/*",
    "packages/**/*",
    "docs/**/*",
    "examples/**/*"
  ]
}