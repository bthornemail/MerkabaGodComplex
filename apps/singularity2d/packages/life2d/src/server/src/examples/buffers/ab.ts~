// Create an ArrayBuffer with a size in bytes
const buf: ArrayBuffer = new ArrayBuffer(4096)

// Create a couple of views
const viewCodec: DataView = new DataView(buf, 0, 1);
const viewId: DataView = new DataView(buf, 1, 2);
const viewData: DataView = new DataView(buf, 2); // From byte 12 for the next 4 bytes
viewCodec.setInt8(0, 424242); // Put 42 in slot 12
viewId.setInt16(0, 24)
viewData.setUint8(0, new TextEncoder().encode('Hello World'))
const utf = new Uint8Array(buf, viewData.byteOffset, viewData.byteLength)
utf.set(Array.from(new TextEncoder().encode("Hello World")))
console.log(viewCodec.getInt8(1));
console.log(viewId.getInt16(0));
console.log(viewData.getFloat64(0));
// Expected output: 42
console.log(viewData.toString())
