{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "outDir": "public",
  "exclude": [
    "node_modules",
    "public",
    "./test",
    "./bin",
    "dist"
  ]
}