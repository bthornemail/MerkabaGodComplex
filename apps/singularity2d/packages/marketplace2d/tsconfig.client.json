{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src/client",
    "outDir": "public",

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true
  },
  "include": ["src/client/**/*"],
  "exclude": ["dist/client/**/*"]
}
