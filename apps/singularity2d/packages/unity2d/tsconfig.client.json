{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src/client",
    "outDir": "dist/client", // Compiled output folder
    "target": "ES2020",// or a compatible target for your use case
    "module": "ESNext", // Ensures compatibility with ESNext
    "moduleResolution": "bundler",  // Resolves ESM modules
    "allowJs": true,
    "lib": ["DOM"] // Include both server-side and DOM libs if you're also working with the client
  },
  "include": ["src/client/**/*"],
  "exclude": ["public/modules", "node_modules", "dist"] // Exclude these folders
}
